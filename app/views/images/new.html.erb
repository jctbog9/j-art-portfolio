<h1>This is the rails form for a new image</h1>

<%= form_for @image do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>

  <%= f.label "Price ($)" %>
  <%= f.number_field :price %>

  <%= f.label "Description" %>
  <%= f.text_field :description %>

  <%= f.label "Image" %>
  <%= f.file_field :image %>

  <%= f.label "Exhibition" %>
  <%= select_tag(:exhibition_id, options_for_select(@selectors)) %>

  <%= f.submit "Add Image" %>
<% end %>
